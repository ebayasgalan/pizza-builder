type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
}

type Order {
  id: ID! @id
  user: User!
  pizzas: [Pizza!]!
  price: Int
  createdAt: DateTime! @createdAt
}

type Pizza {
  id: ID! @id
  size: String
  toppings: [String!]! @scalarList(strategy: RELATION)
}